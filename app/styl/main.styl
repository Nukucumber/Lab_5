@inport css_font

$body_color = #164B69
$main_block_color = #E3E3E3	

set_size(tag_width, tag_margin, tag_padding)
	width tag_width
	margin tag_margin
	padding tag_padding

set_position(column_start, column_end, row_start, row_end)
	grid-column column_start/column_end
	grid-row row_start/row_end

body
	background-color $body_color
	font-size 14px
	font-family arial

	p
		text-align justify
		line-height 2
		text-indent 20px
		word-spacing 1em
		
	.main
		set_size(90%, 20px auto, 20px)
		background-color $main_block_color
		min-height 700px
		min-width 700px

		nav
			ul
				display flex
				flex-wrap nowrap
				justify-content space-around
				list-style-type: none
				
				a
					font-weight bold
					color black
					text-decoration: none
					set_size(auto, 20px, 0)

					&:hover
						background-color #DCDCDC

					&.active
						background-color #DCDCDC

	@import css
	@import css_font
	@import css_block